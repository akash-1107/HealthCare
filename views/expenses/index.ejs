<link rel="icon" href="https://cdn-icons-png.flaticon.com/512/2966/2966327.png">
<% layout('layouts/boilerplate') %>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Billing</h1>
      <div class="card" style="width: 25rem;">
          <img src="https://i.pinimg.com/originals/38/9f/aa/389faaffbd29b7ac323cc92b6dd3fba5.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= patient.name %></h5>
            <p class="card-text" style ="color: green;"><b>You will be fine soon</b></p>
          </div>
          <ul class="list-group list-group-flush">
            <!-- patient,subExpense,totalFees,percentage -->
            <% for(let expense in subExpense){ %>
              <li class="list-group-item"><%= expense %> : <%= subExpense[expense] %></li> 
            <% } %>
            <li class="list-group-item"><h5>Grand Total(in Rs)= <%= totalFees %></h5></li>
            <!-- <li class="list-group-item"><h5>Percentage Fees (in Rs) = <%= percentage %></h5></li> -->
          </ul>
          <div class="card-body">
            <a class="btn btn-success" href="/patients/<%= patient._id %>">Back To patient</a>
          </div>
        </div>
      
    </div>
  </div>