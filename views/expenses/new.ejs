<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Add Expenses of <%= patient.name %></h1>
        <div class="col-md-6 offset-md-3">
            <form action="/expenses/<%= patient._id %>" method="POST">
                <!-- checkPoint -->
                <% for(disease of diseases){ %>
                    <div class="mb-3">
                        <label class="form-label" for="expense">Cost of Cure of <%= disease.name %> (in Rs)</label>
                        <input class="form-control" type="number" name="<%= disease.id %>" placeholder="Enter Expenses" id="expense" required>
                    </div>
                <% } %>
                <div class="mb-3">
                    <button class="btn btn-success">Add Expenses</button>
                </div>
            </form>
            <a class="btn btn-success" href="/patients/<%= patient._id %>">Cancel</a>
            <a class="btn btn-success ml-3" href="/patients">All Patients</a>
        </div>
    </div>