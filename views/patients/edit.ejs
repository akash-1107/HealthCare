<% layout('layouts/boilerplate')%>
    <div class="row my-5">
        <h1 class="text-center">Edit Patient Details</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/patients/<%= patient._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Patient Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Patient name" id="name"
                        value="<%= patient.name %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="date">Date</label>
                    <input class="form-control" type="date" name="date" placeholder="patient date" id="date"
                        value="<%= patient.date %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="age">Age</label>
                    <input class="form-control" type="number" name="age" placeholder="Age" id="age"
                        value="<%= patient.age %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="patient_id">Patient Id</label>
                    <input class="form-control" type="text" name="patient_id" placeholder="Patient Id" id="patient_id"
                        value="<%= patient.patient_id %>" required>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Edit</button>
                </div>
            </form>
            <a class="btn btn-success" href="/patients/<%= patient._id %>">Cancel</a>
        </div>
    </div>